@model OrderModel

<div class="Checkout_section">
    <div class="checkout_form">
        <div class="row">
            <div class="col-12">
                <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
                    <h3>Thông Tin Nhận Hàng</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Name" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="Name" class="form-control"/>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="StreetAddress" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="StreetAddress" class="form-control" />
                                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="City" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="District" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="District" class="form-control" />
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ward" class="col-md-2 control-label"></label>
                                <div class="col-md-12">
                                    <input asp-for="Ward" class="form-control" />
                                    <span asp-validation-for="Ward" class="text-danger"></span>
                                </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label"> Số Liền Phải Trả : @ViewBag.Total</label>
                            </div>
                            </div>
                            <div class="form-group">
                                <button class="my-1 btn btn-success btn-block"> Đặt Hàng</button>
                            </div>
                            
                        </div>
                      </div>
                    </form>
                </div>
            </div>

        </div>
</div>

