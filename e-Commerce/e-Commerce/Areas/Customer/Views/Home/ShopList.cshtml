@model ProductModel
<div class=" pos_home_section">
                            <div class="row pos_home">
                                    <div class="col-lg-12 col-md-12">
                                        <!--banner slider start-->
                                        <div class="banner_slider mb-35">
                                            <img src="assets\img\banner\bannner10.jpg" alt="">
                                        </div> 
                                        <!--banner slider start-->

                                        <!--shop toolbar start-->
                                        <div class="shop_toolbar mb-35">
                                           
                                            <div class="list_button">
                                                <ul class="nav" role="tablist">
                                                    <li>
                                                        <a class="active" data-toggle="tab" href="#large" role="tab" aria-controls="large" aria-selected="true"><i class="fa fa-th-large"></i></a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="page_amount">
                                                @if (((ICollection<ProductModel>)ViewBag.ListProduct).Count>0)
                                                {
                                                    <p>Hiểm Thị 1–9 Trong @(((ICollection<ProductModel>)ViewBag.ListProduct).Count) Kết quả</p>
                                                }
                                                else
                                                {
                                                    <p>Không Tìm Thấy Sản Phẩm Nào !</p>
                                                }

                                            </div>
                                            
                                            <div class="select_option">
                                                <form action="#">
                                                    <div class="nice-select" tabindex="0">
                                                    <span class="current">Tất Cả</span>
                                                    <ul class="list">
                                                        <li data-value="1" class="option selected">Tất Cả</li>
                                                        <li data-value="1" class="option">Giá Từ Cao Đến Thấp</li>
                                                        <li data-value="1" class="option">Giá Thấp Đến Cao</li>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <!--shop toolbar end-->

                                        <!--shop tab product-->
                                        <div class="shop_tab_product">   
                                            <div class="tab-content" id="myTabContent">
                                                <div class="tab-pane fade show active" id="large" role="tabpanel">
                                                    <div class="row">

                                                        @foreach (var m in ViewBag.ListProduct)
                                                        {
                                                    <div class="col-lg-3">
                                                        <div class="single_product">
                                                            <div class="product_thumb">
                                                                <a href="single-product.html"><img src="~/image/product/@m.Picture" /></a>
                                                                <div class="img_icone">
                                                                    <img src="~/user/assets/img/cart/span-new.png" alt="">
                                                                </div>
                                                                <div class="product_action">
                                                                    <a asp-area="Customer" asp-controller="Home" asp-action="Add" asp-route-productId="@m.ProductID"> <i class="fa fa-shopping-cart"></i> Add to cart</a>
                                                                </div>
                                                            </div>
                                                            <div class="product_content">
                                                                <span class="product_price">@(String.Format("{0:n0}",m.Price)) VND</span>
                                                                <h3 class="product_title"><a href="single-product.html">@m.Name</a></h3>
                                                            </div>
                                                            <div class="product_info">
                                                                <ul>
                                                                    <li><a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@m.ProductID" title="Quick view">View Detail</a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>            }

                                                    </div>  
                                                </div>
                                            </div>
                                        </div>    
                                        <!--shop tab product end-->

                                        <!--pagination style start--> 
                                        <div class="pagination_style">
                                            <div class="item_page">
                                                <form action="#">
                                                    <label for="page_select">Hiểm Thị</label>
                                                    <select id="page_select" style="display: none;">
                                                        <option value="1">9</option>
                                                        <option value="2">10</option>
                                                        <option value="3">11</option>
                                                    </select><div class="nice-select" tabindex="0"><span class="current">9</span><ul class="list"><li data-value="1" class="option selected">9</li><li data-value="2" class="option">10</li><li data-value="3" class="option">11</li></ul></div>
                                                    <span>Sản Phẩm</span>
                                                </form>
                                            </div>
                                            <div class="page_number">
                                                <span>Trang : </span>
                                                <ul>
                                                    <li>«</li>
                                                    <li class="current_number">1</li>
                                                    <li><a href="#">2</a></li>
                                                    <li>»</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <!--pagination style end--> 
                                    </div>
                                </div>  
                        </div>