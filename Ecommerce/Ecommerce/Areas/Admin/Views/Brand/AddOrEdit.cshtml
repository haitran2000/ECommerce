@model Ecommerce.Areas.Admin.Models.BrandModel
@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.BrandID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BrandID" />
            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">#</div>
                    </div>
                    <input asp-for="BrandName" class="form-control" />
                </div>
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ful" name="ful">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <div class="form-group">
                        <img id="HinhAnh" src="~/image/no_image.png" alt="no img" class="img-thumbnail" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BrandDescription" class="control-label"></label>
                        <input asp-for="BrandDescription" class="form-control" />
                        <span asp-validation-for="BrandDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BrandStatus" class="control-label"></label>
                        <input asp-for="BrandStatus" class="form-control" />
                        <span asp-validation-for="BrandStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function readURL(input, idImg) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(idImg).attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#ful").change(function () {
            readURL(this, "#HinhAnh");
        });
    </script>
}